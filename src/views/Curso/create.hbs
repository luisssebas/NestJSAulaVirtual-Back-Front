<!DOCTYPE html>
<html>
    <head>
        <title>Crear Curso</title>
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="/css/page.css">
    </head>
    <body onload="initNotifications()">
        <div class="header">
            <div class="container">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/Curso/index">Curso</a></li>
                        <li><a href="/Materia/index">Materia</a></li>
                        <li><a href="/Estudiante/index">Estudiante</a></li>
                        <li><a href="/Profesor/index">Profesor</a></li>
                        <li><a href="/Tarea/index">Tarea</a></li>
                    </ul>
                    <form class="navbar-right">
                        <ul class="nav navbar-nav">
                            <li><a href="#">Usuario</a></li>
                            <li><a href="#">Cerrar Sesion</a></li>
                        </ul>
                    </form>
                </div>                
            </div>
        </div>
        <div class="container body-content">
            <h2>Crear Curso</h2>
            <form method="POST">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-2" >Nombre del Curso: </label>
                        <div class="col-md-10">
                            <input class="form-control text-box single-line" type="text" placeholder="Curso" name="nombreCurso">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-2" >
                            <button class="btn btn-primary" onclick="showNotification()" type="submit" value="create">Create</button>
                            </div>
                    </div>
                </div>
            </form>
            <button class="btn btn-warning" onclick="goBack()">Regresar</button>
            <button class="btn btn-dark" onclick="window.location.href='/Curso/index'">Inicio</button>              
        </div>
    </body>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
    <script type="text/javascript">
	var notificationsEnabled = false;
	
        function initNotifications() {
            if (window.Notification) {
                Notification.requestPermission(function(permission) {
                    if (permission === 'granted') {
                        notificationsEnabled = true;
                    } else {
                        alert("Las notificaciones estan desactivadas!");
                    }
                });
            } else {
                alert("El buscador no admite notificaciones!");
            }
        }
        
        function showNotification() {
            if (notificationsEnabled) {
                var notification = new Notification("Aula Virtual", {
                    body : 'Dato Creado!',
                    icon : 'https://cdn-pro.elsalvador.com/wp-content/uploads/2018/11/pikachu1-1.jpg'
                });
                
                setTimeout(function() { notification.close(); }, 5000);
            } else {
                alert("Las Notifications estan desactivadas");
            }
        }
    </script>
</html>